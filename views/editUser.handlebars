<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}"
      style="width: 250px;margin-bottom: 25px;height: 300px">
  </div>
  <div>
    <form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
      <h3>Name</h3>
      <input type="text" class="form-control" name="name" id="name" value="{{user.name}}">
      <h3 class="mt-3">image</h3>
      <div class="form-group">
        <input type="file" class="form-control-file" id="image" name="image">
      </div>    
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>  
  <hr>
</div>
