<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;height: 300px">    
  </div>
  <div class="col-md-8">
    <h1>{{user.name}}</h1>
    <h1>{{user.email}}</h1>
    {{#ifCond  user.id currentUser.id}}
    <form action="/users/{{user.id}}/edit" method="GET">
      <button class="btn btn-primary mt-5" type="submit">edit</button>
    </form>
    {{/ifCond}}
  </div>
  <hr>
</div>
